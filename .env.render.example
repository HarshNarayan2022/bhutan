# Render.com Environment Variables Template
# Copy these variables to your Render service environment settings

# Required API Keys (GET THESE FROM RESPECTIVE PROVIDERS)
GOOGLE_API_KEY=your_google_api_key_here
GROQ_API_KEY=your_groq_api_key_here  
OPENAI_API_KEY=your_openai_api_key_here

# Security Configuration
SECRET_KEY=your_super_secure_secret_key_here
FLASK_SECRET_KEY=your_flask_secret_key_here
SESSION_COOKIE_SECURE=true

# Application Configuration
FLASK_ENV=production
DEBUG=false
PORT=10000

# Backend Communication (automatically set by render_start.py)
BACKEND_URL=http://localhost:11000

# CORS Configuration (set to your Render domain)
ALLOWED_ORIGINS=https://your-app-name.onrender.com

# Optional Database (for production consider PostgreSQL)
# DATABASE_URL=postgresql://user:password@host:5432/mental_health_app

# Optional Monitoring
# SENTRY_DSN=your_sentry_dsn_here

# System Configuration
PYTHONDONTWRITEBYTECODE=1
PYTHONUNBUFFERED=1
